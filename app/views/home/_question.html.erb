<% if User.posts[current_user.post] == 0 && question.category == 1 %>

<div class="question">
  <div class="left">
    <div class="userImage">
    </div>
  </div>

  <div class="right">



    <B>
    <div class="userDetail">
    <%= question.user.email %>
    </div></B>

    <font size="2px" color="grey">
    asked 
      <% if question.created_at > Time.now.beginning_of_day %>
    <%="#{time_ago_in_words(question.created_at)} ago"%>
     <% else %>
    <%= question.created_at.strftime("%b %d, %Y") %>  
     <% end %>



    <% if question.answers.length != 0 %>
      <%= "Solved" %>
    <% elsif question.answers.length == 0 %>
      <%= "Unsolved" %>
    <% end %>

      

