    </div>
 

    <div class="modal-body">
      <p>
        <b>
            <div class="createQuestion">
          
            <%= form_for @question, remote: true do |f|%>
    
            <%= f.text_area :content ,placeholder: "What is your question?", :class => 'a1', required: true%> <br>

             <%= f.select(:category, options_for_select([['Category 1', 1], ['Category 2', 2], ['Category 3', 3], ['Category 4', 4]]),{ include_blank: false}, { :class => 'ar' }) %>

      


      </b></p>
      <br><br>
    </div>
    <div class="modal-footer">
    <div class ="actions">
     <%= f.submit value:"Ask Question" ,:class => 'button'%>

    
    </div>
  </div>

</div>



<%end%>




</section>






































